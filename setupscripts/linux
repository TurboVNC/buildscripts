SCRIPTDIR=`dirname $0`

CMAKE_BUILD_TYPE=Release

if [ "$1" = "-g" ]; then
	CMAKE_BUILD_TYPE=RelWithDebInfo
	shift
fi

export CFLAGS='-m32 -Wall'
export LDFLAGS=-m32
export JAVA_HOME=/usr/java/default32

cmake -G"Unix Makefiles" -DCMAKE_BUILD_TYPE=${CMAKE_BUILD_TYPE} \
	-DCMAKE_JAVA_COMPILE_FLAGS='-target 1.6 -source 1.6 -Xlint:all,-serial,-cast,-unchecked,-rawtypes' \
	-DCMAKE_INSTALL_SYSCONFDIR=/etc \
	-DPYTHON_EXECUTABLE=/usr/bin/python2 \
	.. ${1+"$@"}
