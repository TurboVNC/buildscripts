SCRIPTDIR=`dirname $0`

CMAKE_BUILD_TYPE=Release

if [ "$1" = "-g" ]; then
	CMAKE_BUILD_TYPE=RelWithDebInfo
	shift
fi

MACOS_PLATFORMDIR=/Applications/Xcode_12.2.app/Contents/Developer/Platforms/MacOSX.platform
MACOS_SYSROOT=$MACOS_PLATFORMDIR/Developer/SDKs/MacOSX.sdk

cat <<EOF >toolchain.cmake
set(CMAKE_SYSTEM_NAME Darwin)
set(CMAKE_SYSTEM_PROCESSOR aarch64)
set(CMAKE_C_COMPILER /Applications/Xcode_12.2.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/clang)
EOF

export CFLAGS="-arch arm64 -mmacosx-version-min=11.0 -Wall"
export JAVA_HOME=/opt/openjdk/Contents/Home

. $SCRIPTDIR/macvars

cmake -G"Unix Makefiles" -DCMAKE_BUILD_TYPE=${CMAKE_BUILD_TYPE} \
	-DCMAKE_JAVA_COMPILE_FLAGS='-target 1.7 -source 1.7 -Xlint:all,-serial,-cast,-unchecked,-rawtypes' \
	-DCMAKE_OSX_DEPLOYMENT_TARGET=11 -DCMAKE_OSX_SYSROOT=$MACOS_SYSROOT \
	-DTVNC_INCLUDEJRE=1 -DCMAKE_TOOLCHAIN_FILE=toolchain.cmake \
	-DTVNC_JDK_MODULE_PATH=/opt/openjdk11.arm64/Contents/Home/jmods \
	-DJAVA_AWT_INCLUDE_PATH=/opt/openjdk11.arm64/Contents/Home/include \
	-DJAVA_AWT_LIBRARY=/opt/openjdk11.arm64/Contents/Home/lib/libjawt.dylib \
	-DJAVA_INCLUDE_PATH=/opt/openjdk11.arm64/Contents/Home/include \
	-DJAVA_INCLUDE_PATH2=/opt/openjdk11.arm64/Contents/Home/include/darwin \
	-DJAVA_JVM_LIBRARY=/opt/openjdk11.arm64/Contents/Home/lib/server/libjvm.dylib \
	"${CMAKEARGS[@]}" .. ${1+"$@"}
